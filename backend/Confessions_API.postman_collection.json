{
  "info": {
    "_postman_id": "confessions-api-2025",
    "name": "Confessions API",
    "description": "FastAPI backend for confessions application with PostgreSQL",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "value",
        "value": "{{API_KEY}}",
        "type": "string"
      },
      {
        "key": "key",
        "value": "X-API-Key",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@confess.coraxi.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/auth/login",
              "host": ["{{BASE_URL}}"],
              "path": ["auth", "login"]
            },
            "description": "Authenticate admin user and return JWT token"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Confessions",
      "item": [
        {
          "name": "Get All Confessions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/confessions",
              "host": ["{{BASE_URL}}"],
              "path": ["confessions"]
            },
            "description": "Get all confessions from the database"
          },
          "response": []
        },
        {
          "name": "Create Confession",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"confession\": \"This is a test confession\",\n  \"location\": \"Johannesburg\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/confessions",
              "host": ["{{BASE_URL}}"],
              "path": ["confessions"]
            },
            "description": "Add a new confession to the database"
          },
          "response": []
        },
        {
          "name": "Export Confessions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/confessions/export",
              "host": ["{{BASE_URL}}"],
              "path": ["confessions", "export"]
            },
            "description": "Generate and download MyConfessions.json file for video generation"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Image Processing",
      "item": [
        {
          "name": "Process Images",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "images",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "images",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{BASE_URL}}/images/process",
              "host": ["{{BASE_URL}}"],
              "path": ["images", "process"]
            },
            "description": "Process uploaded images with OCR and generate video.json structure"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "auth": {
          "type": "noauth"
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/health",
          "host": ["{{BASE_URL}}"],
          "path": ["health"]
        },
        "description": "API health status"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "API_KEY",
      "value": "-V7-CQ7hGwLXkOajtt_m6d0V22XaoPr4O0Wz0ZG6-A4",
      "type": "string"
    }
  ]
